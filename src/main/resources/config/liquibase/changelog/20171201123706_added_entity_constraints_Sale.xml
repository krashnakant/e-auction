<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Sale.
    -->
    <changeSet id="20171201123706-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="sale"
                                 constraintName="fk_sale_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="sales_id"
                                 baseTableName="sale_accounts"
                                 constraintName="fk_sale_accounts_sales_id"
                                 referencedColumnNames="id"
                                 referencedTableName="sale"/>
        <addForeignKeyConstraint baseColumnNames="accounts_id"
                                 baseTableName="sale_accounts"
                                 constraintName="fk_sale_accounts_accounts_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_account"/>
        
    </changeSet>
</databaseChangeLog>
